.login-containar
  = render partial:"shared/single-header"

  %main.main
    .account-center
      .new_account
        %h1 新規会員登録
      .account__form_innner
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .account__form_group
            = link_to "メールアドレスで登録", new_registration_path(resource_name)
            = fa_icon 'envelope', class: 'icon'
        %button#facebook-login.button-default.btn-sns.btn-facebook
          = fa_icon 'facebook-square', class: 'icon'
          %p Facebookで登録
        %button#google-login.button-default.btn-sns.btn-google
          = fa_icon 'google-plus', class: 'icon'
          %p Googleで登録
  %footer.single__footer
    = render partial:"shared/single-footer"
