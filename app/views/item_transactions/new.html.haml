%header.confirmation-header
  =render partial: "shared/single-header"
%main.confirmation-main
  = form_with model: [@item, @item_transaction], local: true, class: "main-content" do |f|
    %section.item-box-container.single-container-section
      - if current_user && current_user.credits.present?
        %section.main-contents__item-header
          %p 購入を確定しますか？
        %section.main-contents__item-info
          .item-header
            =image_tag @item.images[0],class: "is-higher-width lazyloaded", height: 150
            %p.image-title
              = @item.name
          .item-pay-form
            .item-pay-form__price
              .item-price
                = "¥" + @item.price.to_s
                .delivery-price
                  = @item.postage_select.text
            .item-pay-form__point
              .none ポイントはありません
            .item-pay-form__sum
              %p.sum-headword 支払い金額
              %p.sum-price
                = "¥" + @item.price.to_s
            = f.submit "購入する", id: "submit-pay"

      - else
        %section.main-contents__item-header
          %p クレジットカード登録が必要です。
        %section.main-contents__item-info
          .item-header
            =image_tag @item.images[0],class: "is-higher-width lazyloaded", height: 150
            %p.image-title
              = @item.name
          .item-pay-form
            .item-pay-form__price
              .item-price
                = "¥" + @item.price.to_s
              .delivery-price
                = @item.postage_select.text
            .item-pay-form__point
              .none ポイントはありません
            .item-pay-form__sum
              %p.sum-headword 支払い金額
              %p.sum-price
                = @item.price
            #submit-pay 購入できません
        %section.main-contents__delivery-info
          %p.header-address 配送先
          .contents-address
            %p 〒123-4567
            %p 大阪府大阪市1-2-345
            %p メルカリ太郎
          .contents-change
            =link_to root_path do
              =fa_icon("angle-right")
          .clearfix
        %section.main-contents__pay-info
          %p.header-card 支払方法
          .contents-change
            =link_to mypage_card_new_path,method: :get do
              ="クレジットカードを登録する"
              =fa_icon("angle-right")
          .clearfix

%footer.confirmation-footer
  =render partial: "shared/single-footer"
